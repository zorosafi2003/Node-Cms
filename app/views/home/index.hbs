<div class="row">

    <!-- Blog Entries Column -->
    <div class="col-md-8">

        <h1 class="my-4">Home Page
            <small>Secondary Text</small>
        </h1>

        <!-- Blog Post -->
        {{#each posts}}
        <div class="card mb-4">
                        <div style="height:243px">
            {{#if this.file}}
            <img class="card-img-top" style="height:100%"  src="/uploads/{{this.file}}"  >
            {{else}}
              <img class="card-img-top" style="height:100%" src="http://placehold.it/750x300" >
            {{/if}}
            </div>
            <div class="card-body">
                <h2 class="card-title">{{this.title}}</h2>
                <p class="card-text">{{this.body}}</p>
                <a href="/post/{{this._id}}" class="btn btn-primary">Read More &rarr;</a>
            </div>
            <div class="card-footer text-muted">
                Posted on {{#formatDate this.createdAt 'YYYY-DD-MM h:hh A'}}{{/formatDate}} by
                <a href="#">Start Bootstrap</a>
            </div>
        </div>
        {{/each}}
        <!-- Pagination -->
        <ul class="pagination justify-content-center mb-4">

            {{#paginate currentPage = 1}} {{/paginate}}
            {{!-- <li class="page-item">
                <a class="page-link" href="#">&larr; Older</a>
            </li>
            <li class="page-item disabled">
                <a class="page-link" href="#">Newer &rarr;</a>
            </li> --}}
        </ul>

    </div>

    <!-- Sidebar Widgets Column -->
    {{> home/home-sidebar}}

</div>
<!-- /.row -->
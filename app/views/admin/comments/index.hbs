<div class="row">
    <form action="/admin/categories/create" method="post" class="col-6 offset-3">
        <div class="input-group">
            <input type="text" class="form-control" name="name">
            <span class="input-group-btn">
                <button class="btn btn-primary" type="submit" aria-label=""> Comments</button>
            </span>
        </div>
    </form>
</div>
<div class="row mt-3">
    <div class="col-12">
        <table class="table table-striped table-inverse table-bordered">
            <thead class="thead-inverse">
                <tr>
                    <th>Id</th>
                    <th>Body</th>
                    <th>User</th>
                    <th>Date</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each comments}}
                <tr>
                    <td scope="row">{{this.id}}</td>
                    <td>{{this.body}}</td>
                    <td>{{this.user.firstName}}</td>
                      <td> {{#formatDate this.createdAt 'YYYY-DD-MM h:hh A'}}{{/formatDate}}</td>
                    <td class="text-center">
                        <form action="/admin/comments/delete/{{this.id}}?_method=DELETE" method="post">
                            <button type="submit" class="btn btn-danger"> <i class="fa fa-trash-o"
                                    aria-hidden="true"></i>
                            </button>
                        </form>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
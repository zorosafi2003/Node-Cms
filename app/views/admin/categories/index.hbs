<div class="row">
    <form action="/admin/categories/create" method="post" class="col-6 offset-3">
        <div class="input-group">
            <input type="text" class="form-control" name="name">
            <span class="input-group-btn">
                <button class="btn btn-primary" type="submit" aria-label="">Create Category</button>
            </span>
        </div>
    </form>
</div>
<div class="row mt-3">
    <div class="col-12">
        <table class="table table-striped table-inverse table-bordered">
            <thead class="thead-inverse">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>
                {{#each categories}}
                <tr>
                    <td scope="row">{{this._id}}</td>
                    <td>{{this.name}}</td>
                </tr>
{{/each}}
            </tbody>
        </table>
    </div>
</div>